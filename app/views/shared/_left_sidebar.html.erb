<div class="row logo-div text-center">
  <%= link_to image_tag("wiki_logo.png", size: "90x90", alt: "wikiclone Logo"), root_url %>

  <h4 class="wiki-font"><%= link_to 'WIKICLONE', root_url %></h4>
  <p class="wiki-font"><%= link_to 'THE FREE ENCYCLOPEDIA', root_url %></p>

  <%= render partial: 'articles/search_partial' %>
</div>

<div class="row central-featured-category text-center">
  <h5 class="text-center"><%= link_to "Popular Categories", categories_path %></h5>

  <% side_categories = Category.all %>
  <% side_categories.each do |side_cat| %>
    <h6 id="category-link-title" class="link-box"><%= link_to "#{side_cat.name.capitalize}", side_cat, remote: true %></h6>
  <%end%>
</div>

<div class="row text-center">
  <h4><%= link_to new_charge_path do %>
    Donate <%= icon('money') %>
    <% end %>
  </h4>
</div>

