<div class="media">
  <div class="media-left">
    <%= link_to image_tag(photo.image.url(:thumb), class: 'media-object'), photo.image.url, target: '_blank' %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= photo.title %></h4>

    <!-- ONLY ADMIN AND ARTICLE AUTHOR CAN REMOVE IMAGES -->
    <% if @current_user && (@current_user == photo.user || @current_user.role == 'admin') %>
    <%= link_to 'Remove', photo_path(photo), remote: true, class: 'btn btn-danger', method: :delete %>
    <% end %>
  </div>
</div>
